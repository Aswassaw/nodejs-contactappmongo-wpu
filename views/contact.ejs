<div class="row">
    <div class="col">
        <h2>Daftar Contact</h2>

        <a href="/contact/add" class="btn btn-primary mb-2">Tambah Contact</a>

        <% if (success.length !== 0) { %>
         <div class="alert alert-success">
             <%= success %> 
         </div>
        <% } %>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (contacts.length) { %>
                    <% contacts.forEach((contact, i) => { i++ %>
                        <tr>
                            <th scope="row"><%= i++; %> </th>
                            <td><%= contact.nama %> </td>
                            <td><%= contact.nohp %> </td>
                            <td>
                                <a href="/contact/<%= contact._id %>" class="btn btn-success badge rounded-pill">Detail</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger">
                                Tidak ada data ditemukan
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>